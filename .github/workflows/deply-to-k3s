name: Build and Deploy to K3s

on:
  push:
    branches:
      - main # Or whatever your main branch is called
  workflow_dispatch:

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}

jobs:
  build-and-push:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Log in to the Container registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          # We only need ONE tag: 'latest'
          tags: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:latest
          # Pass only the SHARED variables here.
          # Note: We removed VITE_TABLE_ID and VITE_APP_MODE because the app determines them dynamically now.
          build-args: |
            VITE_API_URL_MENU=${{ secrets.VITE_API_URL_MENU }}
            VITE_API_KEY=${{ secrets.VITE_API_KEY }}
            VITE_TABLE_TAP_URL=${{ secrets.VITE_TABLE_TAP_URL }}
            VITE_API_GATEWAY_URL=${{ secrets.VITE_API_GATEWAY_URL }}
            VITE_COGNITO_POOL_ID=${{ secrets.VITE_COGNITO_POOL_ID }}
            VITE_LEX_BOT_ID=${{ secrets.VITE_LEX_BOT_ID }}
            VITE_LEX_BOT_ALIAS_ID=${{ secrets.VITE_LEX_BOT_ALIAS_ID }}
            VITE_LEX_BOT_LOCALE_ID=${{ secrets.VITE_LEX_BOT_LOCALE_ID }}
            VITE_STRIPE_PUBLISHABLE_KEY=${{ secrets.VITE_STRIPE_PUBLISHABLE_KEY }}

  deploy-to-server:
    needs: build-and-push
    runs-on: ubuntu-latest
    
    steps:
    - name: Deploy to K3s Server via SSH
      uses: appleboy/ssh-action@v1.0.3
      with:
        host: ${{ secrets.SERVER_HOST }}
        username: ${{ secrets.SERVER_USER }}
        key: ${{ secrets.SSH_PRIVATE_KEY }}
        script: |
          # 1. Go to the project folder
          cd ~/TableTap
          
          # 2. Pull the latest K8s manifests from git
          # (Ensure you ran 'git init' and 'git remote add' on the server as discussed)
          git pull origin main
          
          # 3. Apply the simplified manifests (The "One Deployment" setup)
          kubectl apply -f k8s/tables/
          
          # 4. Force K3s to re-pull the image to get the latest code
          kubectl rollout restart deployment/table-app